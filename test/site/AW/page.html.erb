<div class="page">

<div class="header">
  <%= @site.link_image('fleuron.png') %>
  <%= @helper.list_pages(section: '/') %>
  <br/>
  <h1>AW Test Site</h1>
  <h3>As rendered by: <span class="version"><%= @site.app.identity %></span></h3>
  <br/>
  <h2>Location: <%= @page.index? || @section.root? ? @helper.trail : @helper.trail(show_current: false) %></h2>
  <br/>
  <% unless @page.index? || @section.root? %>
    <%= @helper.list_pages(limit: 5) %>
  <% end %>
</div>

<div class="content">
  <%= @body %>
</div>

</div>
